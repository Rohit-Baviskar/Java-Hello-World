pipeline {
  agent any
  tools {
    maven 'MAVEN' 
  }
  stages {
    stage ('Build') {
      steps {
        sh 'mvn clean package'
      }
    }
    stage ('Deploy') {
      steps {
        script {
          deploy adapters: [tomcat9(credentialsId: '0a5f7d38-418f-4cbd-81e3-9202e6053d43', path: '', url: 'http://localhost:8090/')], contextPath: 'pipeline-2', war: '**/*.war' 
        }
      }
    }
  }
}
